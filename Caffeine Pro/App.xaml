                                        <Separator Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="2" />

                                        <MenuItem  Grid.Row="15" Grid.Column="0" Header="24h" Tag="1440" Click="MenuItemOnClick_ActiveFor"/>

                                    </Grid>
                                </DataTemplate>
                            </MenuItem.HeaderTemplate>
                        </MenuItem>
                    </MenuItem.Items>
                </MenuItem>
